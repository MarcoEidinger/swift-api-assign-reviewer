{
  "name": "swift-api-assign-reviewer",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub action to detect access control changes (open/public) in Swift files and set reviewer/assignee to pull request ",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/swift-api-assign-reviewer.git"
  },
  "keywords": [
	"github actions",
	"code review",
	"pull request",
	"swift",
	"access control"
  ],
  "author": "Marco Eidinger",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/github": "^2.2.0",
    "@types/js-yaml": "^3.12.3",
    "@types/lodash": "^4.14.150",
    "install": "^0.13.0",
    "lodash": "^4.17.21",
    "npm": "^9.2.0"
  },
  "devDependencies": {
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.38",
    "@typescript-eslint/parser": "^2.31.0",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^5.16.0",
    "eslint-plugin-github": "^2.0.0",
    "eslint-plugin-jest": "^22.21.0",
    "jest": "^29.3.1",
    "jest-circus": "^29.3.1",
    "js-yaml": "^3.13.1",
    "prettier": "^1.19.1",
    "ts-jest": "^25.5.1",
    "typescript": "^3.8.3"
  }
}
